{
    "name": "gestion-magasin",
    "version": "1.0.0",
    "description": "Application de gestion de magasin avec Electron et Flask",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-packager . gestion-magasin --platform=win32 --arch=x64 --out=dist/",
        "clean": "rimraf dist",
        "build:css": "npx tailwindcss build src/styles.css -o dist/styles.css"
    },
    "dependencies": {
        "axios": "^1.7.9",
        "child_process": "^1.0.2",
        "electron": "^30.0.0",
        "electron-store": "^8.1.0",
        "tailwindcss": "^4.0.8"
    },
    "devDependencies": {
        "electron-packager": "^17.1.1",
        "rimraf": "^5.0.0"
    }
}
